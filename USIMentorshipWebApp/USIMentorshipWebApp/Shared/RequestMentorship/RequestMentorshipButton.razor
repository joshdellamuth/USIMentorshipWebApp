@using USIMentorshipWebApp.Data
@inject Radzen.DialogService radzenDialogService 

<RadzenButton Variant="Radzen.Variant.Outlined" Click=@ShowRequestMentorshipDialog Style="font-size:12px" Text="Request Mentorship" />

@code {
    [CascadingParameter]
    //must have this property for the cascading dropdown
    public User Mentor { get; set; }

    public async Task ShowRequestMentorshipDialog()
    {
        await radzenDialogService.OpenAsync<RequestMentorshipDialog>($"Send Mentorship Request to {Mentor.FirstName} {Mentor.LastName}?",
               new Dictionary<string, object>() { { "Mentor", Mentor } },
               // can configure the dropdown to be resizable and dragable (commented out)
               new Radzen.DialogOptions() { Width = "550px", Height = "450px", CloseDialogOnOverlayClick = true /* Resizable = true, Draggable = true */ });
    }
}