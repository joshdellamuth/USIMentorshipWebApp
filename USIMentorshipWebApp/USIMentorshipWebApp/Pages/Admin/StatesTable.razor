@using USIMentorshipWebApp.Data
@using USIMentorshipWebApp.Models
@inject AdminPortalService adminPortalService
@using Radzen
@using Radzen.Blazor

<style>
    .rz-grid-table {
        width: unset;
    }
</style>

<RadzenGrid AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@allStates" TItem="State">
    <Columns>
        <RadzenGridColumn TItem="State" Property="StateCode" Title="State Code"></RadzenGridColumn>
        <RadzenGridColumn TItem="State" Property="StateName" Title="State Name"></RadzenGridColumn>
        <RadzenGridColumn TItem="State" Property="CountryCode" Title="Country Code"></RadzenGridColumn>
    </Columns>
</RadzenGrid>

@code {
    List<State>? allStates;

    protected override async Task OnInitializedAsync()
    {
        allStates = await adminPortalService.GetAllStates();
    }
}
