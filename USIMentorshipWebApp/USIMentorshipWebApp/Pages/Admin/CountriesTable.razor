@using USIMentorshipWebApp.Data
@using USIMentorshipWebApp.Models
@inject AdminPortalService adminPortalService
@using Radzen
@using Radzen.Blazor

<style>
    .rz-grid-table {
        width: unset;
    }
</style>

<RadzenGrid AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@allCountries" TItem="Country">
    <Columns>
        <RadzenGridColumn TItem="Country" Property="CountryCode" Title="Country Code"></RadzenGridColumn>
        <RadzenGridColumn TItem="Country" Property="CountryName" Title="Country Code"></RadzenGridColumn>
    </Columns>
</RadzenGrid>

@code {
    List<Country>? allCountries;

    protected override async Task OnInitializedAsync()
    {
        allCountries = await adminPortalService.GetAllCountries();
    }
}
