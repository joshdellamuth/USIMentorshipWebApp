@using USIMentorshipWebApp.Data
@using USIMentorshipWebApp.Models
@inject AdminPortalService adminPortalService
@using Radzen
@using Radzen.Blazor

<style>
    .rz-grid-table {
        width: unset;
    }
</style>

<RadzenGrid AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@allcities" TItem="City">
    <Columns>
        <RadzenGridColumn TItem="City" Property="CityId" Title="User ID"></RadzenGridColumn>
        <RadzenGridColumn TItem="City" Property="CityName" Title="First Name"></RadzenGridColumn>
        <RadzenGridColumn TItem="City" Property="StateCode" Title="Last Name"></RadzenGridColumn>
    </Columns>
</RadzenGrid>

@code {
    List<City>? allcities;

    protected override async Task OnInitializedAsync()
    {
        allcities = await adminPortalService.GetAllCities();
    }
}
