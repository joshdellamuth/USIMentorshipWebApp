@using USIMentorshipWebApp.Data
@using USIMentorshipWebApp.Models
@inject AdminPortalService adminPortalService
@using Radzen
@using Radzen.Blazor

<style>
    .rz-grid-table {
        width: unset;
    }
</style>

<RadzenGrid AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@allConditionDetails" TItem="ConditionDetail">
    <Columns>
        <RadzenGridColumn TItem="ConditionDetail" Property="ConditionDetailId" Title="Condition Detail Id"></RadzenGridColumn>
        <RadzenGridColumn TItem="ConditionDetail" Property="MatchId" Title="Match Id"></RadzenGridColumn>
        <RadzenGridColumn TItem="ConditionDetail" Property="ConditionName" Title="Condition Name"></RadzenGridColumn>
        <RadzenGridColumn TItem="ConditionDetail" Property="ConditionValue" Title="Condition Value"></RadzenGridColumn>
    </Columns>
</RadzenGrid>

@code {
    List<ConditionDetail>? allConditionDetails;

    protected override async Task OnInitializedAsync()
    {
        allConditionDetails = await adminPortalService.GetAllConditionDetails();
    }
}
