@using USIMentorshipWebApp.Data
@using USIMentorshipWebApp.Models
@inject AdminPortalService adminPortalService
@using Radzen
@using Radzen.Blazor

<style>
    .rz-grid-table {
        width: unset;
    }
</style>

<RadzenGrid AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@allUserRoles" TItem="UserRole">
    <Columns>
        <RadzenGridColumn TItem="UserRole" Property="UserId" Title="User Id"></RadzenGridColumn>
        <RadzenGridColumn TItem="UserRole" Property="RoleId" Title="Role Id"></RadzenGridColumn>
        <RadzenGridColumn TItem="UserRole" Property="StartDate" Title="Start Date"></RadzenGridColumn>
        <RadzenGridColumn TItem="UserRole" Property="EndDate" Title="End Date"></RadzenGridColumn>
        <RadzenGridColumn TItem="UserRole" Property="UserRolesId" Title="UserRoles Id"></RadzenGridColumn>
    </Columns>
</RadzenGrid>

@code {
    List<UserRole>? allUserRoles;

    protected override async Task OnInitializedAsync()
    {
        allUserRoles = await adminPortalService.GetAllUserRoles();
    }
}
