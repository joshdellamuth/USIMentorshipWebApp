@page "/sign-up-landing-page"
@layout NotLoggedInLayout
@inject NavigationManager NavigationManager
@inject DialogService DialogService



<PageTitle>Login - USI Mentorship Program</PageTitle>

<div class="our-row">
    @* COLUMN FOR IMAGE *@
    <div class="image-column">
        <img src="images/student-mentor-looking-at-taxes.jpg" alt="Student and Mentor looking at taxes">
    </div>
    <div class="login-column-container">
        @* WHO ARE YOU HEADING *@
        <h1 class="default-margin">Who are you?</h1>

        @* SECOND COLUMN FOR LOGIN INFO *@
        <div class="login-column">
            @* RADZEN LOGIN CARD *@
            <RadzenCard Class="rz-shadow-0">
                @* USI MENTORSHIP PROGRAM LOGO*@
                <img src="images/usi-logo-mentorship-program.png" alt="Student and Mentor looking at taxes">                
                <div style="display: flex; justify-content: center;">
                    @* RADIO BUTTONS *@
                    <RadzenRadioButtonList Orientation=Orientation.Vertical @bind-Value=@roleSelection TValue="int" class="mb-5 centered-radio-buttons" style="text-align:center;">
                        <Items>
                            <RadzenRadioButtonListItem Text="I am a mentor" Value="1" />
                            <RadzenRadioButtonListItem Text="I am a mentee" Value="2" />
                        </Items>
                    </RadzenRadioButtonList>
                </div>

                <div style="display: flex; justify-content: center;"> 
                    @* BUTTONS TO CONTINUE OR GO BACK TO LOGIN *@
                    <RadzenStack Oreientation="Orientation.Vertical" Gap="6">
                        <RadzenButton Style="width:100px; font-size:14px;" Variant="Variant.Outlined" ButtonStyle="ButtonStyle.Secondary" Click=@GoToRegisterPage Text="Continue" />
                        <RadzenButton Style="width:100px; font-size:14px;" Variant="Variant.Outlined" ButtonStyle="ButtonStyle.Secondary" Click=@GoToLogin Text="Back To Login" />
                    </RadzenStack>
                </div>
            </RadzenCard>
        </div>
    </div>
</div>

@code {
    // radio button value starts as 0 but changes based on radio button selected
    int roleSelection = 0;

    void GoToRegisterPage(MouseEventArgs args)
    {
        if (roleSelection == 1)
        {
            NavigationManager.NavigateTo("/mentor-registration");
        }

        else if (roleSelection == 2)
        {
            NavigationManager.NavigateTo("/mentee-registration");
        }

        else
        {
            
        }
        
    }

    void GoToLogin(MouseEventArgs args)
    {
        NavigationManager.NavigateTo("/");
    }
}